				<entry>linux | solaris</entry>
			</row>
			<row>
				<entry>
				  <varname>rack</varname>
				  <footnoteref linkend="fn-implied-attr">,
				  <footnoteref linkend="fn-host-attr">
				</entry>
				<entry>int</entry>
				<entry></entry>
			</row>
			<row>
				<entry>
				  <varname>rank</varname>
				  <footnoteref linkend="fn-implied-attr">,
				  <footnoteref linkend="fn-host-attr">
				</entry>
				<entry>int</entry>
				<entry></entry>
			</row>
			<row>
				<entry>
				  <varname>rocks_version</varname>
				  <footnoteref linkend="fn-global-attr">
